<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_transparent"
    android:orientation="vertical" >

    <com.pt.treasuretrash.widget.HelveticaLightTextView
        android:id="@+id/lblMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_padding_small"
        android:gravity="center_horizontal"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_xlarge" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/sign_up_teal" />

    <com.pt.treasuretrash.widget.HelveticaLightTextView
        android:id="@+id/lblClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/margin_padding_small"
        android:text="@string/close"
        android:textColor="@color/sign_up_teal"
        android:textSize="@dimen/text_size_huge" />

</LinearLayout>