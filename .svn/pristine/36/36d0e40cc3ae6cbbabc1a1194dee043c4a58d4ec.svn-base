<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/sign_up_dark_teal" />

            <stroke android:width="1dp" android:color="@color/white" />

            <corners android:radius="0dp" />

            <padding android:bottom="1dp" android:left="3dp" android:right="3dp" android:top="1dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/sign_up_teal" android:startColor="@color/sign_up_teal" />

            <stroke android:width="1dp" android:color="@color/white" />

            <corners android:radius="0dp" />

            <padding android:bottom="1dp" android:left="3dp" android:right="3dp" android:top="1dp" />
        </shape></item>

</selector>