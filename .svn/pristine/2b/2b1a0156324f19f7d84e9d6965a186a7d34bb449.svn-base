<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

   <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvConfirmDelete"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/margin_padding_tiny" >

            <TextView
                android:id="@+id/tvGap"
                android:layout_width="@dimen/button_size_xxtiny"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_padding_xtiny"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="@dimen/button_size_xnormal"
                android:layout_height="@dimen/button_size_xsmall"
                android:gravity="right" >

                <ImageView
                    android:id="@+id/ivDelete"
                    android:layout_width="@dimen/button_size_xxtiny"
                    android:layout_height="@dimen/button_size_xxtiny"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/icon_delete_horizontal" />

                <ImageView
                    android:id="@+id/ivUser"
                    android:layout_width="@dimen/button_size_small"
                    android:layout_height="@dimen/button_size_small"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/image_avatar_default" />
            </LinearLayout>

            <com.pt.treasuretrash.widget.HelveticaLightTextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_padding_xtiny"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/sign_up_teal"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>

        <com.pt.treasuretrash.widget.HelveticaLightTextView
            android:id="@+id/tvConfirmDelete"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/red"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/margin_padding_small"
            android:paddingRight="@dimen/margin_padding_small"
            android:text="@string/confirm_delete"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />
    </RelativeLayout>
    
    <View
        android:id="@+id/viewSeparator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_padding_small"
        android:background="@color/sign_up_teal" />
    
  

</LinearLayout>