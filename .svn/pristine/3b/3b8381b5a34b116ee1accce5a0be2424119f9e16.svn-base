<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"><shape>
            <solid android:color="@color/type_color_selected" />

            <stroke android:width="1dp" android:color="@color/type_color_selected" />

            <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <solid android:color="@color/type_color_selected" />

            <stroke android:width="0dp" android:color="@color/white" />

            <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
        </shape></item>
    <item android:state_focused="false"><shape>
            <gradient android:angle="270" android:endColor="@color/white" android:startColor="@color/white" />

            <corners android:radius="0dp" />

            <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
        </shape></item>

</selector>