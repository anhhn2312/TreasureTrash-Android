<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llShareOptions"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:visibility="gone" >

    <LinearLayout
        android:id="@+id/llFirstRow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/llFirstRow_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border_teal"
            android:gravity="center" >

            <ImageView
                android:layout_width="@dimen/button_size_xnormal"
                android:layout_height="@dimen/button_size_xnormal"
                android:adjustViewBounds="true"
                android:background="@drawable/icon_tick" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFirstRow_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/header_background_transparent_80"
            android:gravity="center"
            android:orientation="horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llShareContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/header_background_transparent_80" >

        <LinearLayout
            android:id="@+id/llShare"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:id="@+id/viewShareCorner"
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/bg_share_corner" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/sign_up_teal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_padding_small"
                android:paddingLeft="@dimen/margin_padding_small"
                android:paddingRight="@dimen/margin_padding_small"
                android:paddingTop="@dimen/margin_padding_normal" >

                <com.pt.treasuretrash.widget.HelveticaLightTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/message_share_published_listing_info"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xxlarge" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin_padding_large"
                    android:layout_marginRight="@dimen/margin_padding_large"
                    android:layout_marginTop="@dimen/margin_padding_large"
                    android:background="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/sign_up_teal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_padding_small"
                android:paddingLeft="@dimen/margin_padding_small"
                android:paddingRight="@dimen/margin_padding_small" >

                <com.pt.treasuretrash.widget.HelveticaLightTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/message_share_this_listing"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xxlarge" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_normal"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <com.pt.treasuretrash.widget.AutoBgButton
                            android:id="@+id/tvShareFb"
                            android:layout_width="@dimen/button_size_huge"
                            android:layout_height="@dimen/button_size_huge"
                            android:background="@drawable/ic_facebook_white"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_huge" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <com.pt.treasuretrash.widget.AutoBgButton
                            android:id="@+id/tvShareGoogle"
                            android:layout_width="@dimen/button_size_huge"
                            android:layout_height="@dimen/button_size_huge"
                            android:background="@drawable/ic_google_plus_white"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_huge" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <com.pt.treasuretrash.widget.AutoBgButton
                            android:id="@+id/tvShareEmail"
                            android:layout_width="@dimen/button_size_huge"
                            android:layout_height="@dimen/button_size_huge"
                            android:background="@drawable/ic_email_white"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_huge" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <com.pt.treasuretrash.widget.AutoBgButton
                            android:id="@+id/tvShareMessage"
                            android:layout_width="@dimen/button_size_huge"
                            android:layout_height="@dimen/button_size_huge"
                            android:background="@drawable/ic_message_white"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_huge" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>